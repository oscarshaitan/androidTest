<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shaitan.boxopen">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/apkico"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".AdminMapsActivity"
            android:label="@string/title_activity_admin_maps" />
        <activity
            android:name=".OperatorMapsActivity"
            android:label="@string/title_activity_operator_maps" />
        <activity android:name=".AdminBoxList" />
        <activity android:name=".TransporterBoxList" />
        <activity android:name=".TransporterMapsActivity" />
        <activity android:name=".DestinatarioBoxList" />
        <activity android:name=".DestinatarioMapsActivity" />
        <activity android:name=".Help"></activity>
    </application>

</manifest>