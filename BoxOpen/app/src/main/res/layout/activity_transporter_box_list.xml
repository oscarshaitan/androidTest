<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transporter_box_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shaitan.boxopen.TransporterBoxList">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/menu_idle"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:background="@android:color/transparent"
        android:id="@+id/menuBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />



    <ListView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/BoxList"
        android:choiceMode="singleChoice"
        android:background="#dcdcd1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menuBtn"
        android:layout_alignParentEnd="true" />
    <ListView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/MenuList"
        android:choiceMode="singleChoice"
        android:background="#a6a6a2"
        android:layout_below="@+id/menuBtn"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TRANSPORTADOR CAJAS DISPONIBLES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

</RelativeLayout>
