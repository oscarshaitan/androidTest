<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transporter_maps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shaitan.boxopen.TransporterMapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.shaitan.boxopen.TransporterMapsActivity"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/menu"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/menu_idle"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:background="@android:color/transparent"
        android:id="@+id/menu"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <ListView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/MenuList"
        android:choiceMode="singleChoice"
        android:background="#a6a6a1"
        android:layout_below="@+id/menu"
        android:layout_alignParentEnd="true" />


    <Button
        android:text="Open Box"
        android:layout_width="161dp"
        android:layout_height="50dp"
        android:id="@+id/openBox"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <GridLayout
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:background="#a6a6a1"
        android:layout_above="@+id/terminarEntrega"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bateria"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="6"/>
        <TextView
            android:text=".........."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/invisible"
            android:textColor="#a6a6a1"
            android:textStyle="normal|bold"
            android:layout_row="1"
            android:layout_column="7"/>

        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sistema"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_row="1"
            android:layout_column="6"/>

        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/key"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:layout_row="2"
            android:layout_column="6" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/key"
            android:id="@+id/imageView10"
            android:layout_row="2"
            android:layout_column="5"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/checkbox"
            android:id="@+id/imageView8"
            android:layout_row="1"
            android:layout_column="5"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/battery"
            android:id="@+id/imageView6"
            android:layout_row="0"
            android:layout_column="5"/>

        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voltaje"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="4"/>

        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humedad"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_row="1"
            android:layout_column="4"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/water"
            android:id="@+id/imageView4"
            android:layout_row="1"
            android:layout_column="3"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/flash"
            android:id="@+id/imageView5"
            android:layout_row="0"
            android:layout_column="3"/>

        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/luz"
            android:layout_column="2"
            android:layout_row="1"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_column="2"
            android:layout_row="0"/>

        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tapa"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:layout_row="2"
            android:layout_column="2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lock"
            android:id="@+id/imageView7"
            android:layout_row="2"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/temperat"
            android:id="@+id/imageView2"
            android:layout_column="1"
            android:layout_row="0"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/light"
            android:id="@+id/imageView3"
            android:layout_column="1"
            android:layout_row="1"/>
    </GridLayout>


    <Button
        android:text="@string/end_delivery"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/terminarEntrega" />

    <ToggleButton
        android:text="Chapa"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/chapa"
        android:textOn="@string/action_close"
        android:textOff="@string/action_open"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/gps_problem"
        android:background="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gpsfail"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <TextView
        android:text="@string/convey_ttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/gpsfail"
        android:layout_toEndOf="@+id/openBox" />


</RelativeLayout>
