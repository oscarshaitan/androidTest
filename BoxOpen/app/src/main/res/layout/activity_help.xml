<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shaitan.boxopen.Help">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/menu_idle"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:background="@android:color/transparent"
        android:id="@+id/menuBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="GUIA DEL PANEL DE VARIABLES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <GridLayout
        android:layout_width="200dp"
        android:background="#dcdcd1"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menuBtn"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/light"
            android:id="@+id/imageView3"
            android:layout_column="0"
            android:layout_row="1"/>

        <ImageView
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:src="@mipmap/temperat"
            android:id="@+id/imageView2"
            android:layout_column="0"
            android:layout_row="0"/>

        <ImageView
            android:layout_width="38dp"
            android:layout_height="39dp"
            android:src="@mipmap/lock"
            android:id="@+id/imageView7"
            android:layout_row="2"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:src="@mipmap/flash"
            android:id="@+id/imageView5"
            android:layout_row="3"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:src="@mipmap/water"
            android:id="@+id/imageView4"
            android:layout_row="4"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="37dp"
            android:src="@mipmap/battery"
            android:id="@+id/imageView6"
            android:layout_row="5"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="38dp"
            android:src="@mipmap/checkbox"
            android:id="@+id/imageView8"
            android:layout_row="6"
            android:layout_column="0"/>

        <TextView
            android:text="Estado de la Chapa (Bloqueado/Liberado)"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:id="@+id/sistema"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_row="6"
            android:layout_column="1"
            android:textSize="15.5sp" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="38dp"
            android:src="@mipmap/key"
            android:id="@+id/imageView10"
            android:layout_row="7"
            android:layout_column="0"/>

        <TextView
            android:text="Tipo de apertura de la caja"
            android:layout_width="301dp"
            android:layout_height="37dp"
            android:id="@+id/key"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:layout_row="7"
            android:layout_column="1"
            android:textSize="15.5sp" />

        <TextView
            android:text="Temperatura de la caja en centigrados"
            android:layout_width="297dp"
            android:layout_height="35dp"
            android:id="@+id/temp"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="15.5sp" />

        <TextView
            android:text="Cantidad de luz interna de la caja"
            android:layout_width="267dp"
            android:layout_height="37dp"
            android:id="@+id/luz"
            android:layout_column="1"
            android:layout_row="1"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:textSize="15.5sp" />

        <TextView
            android:text="Voltaje actual de la bateria "
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/voltaje"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="15.5sp" />

        <TextView
            android:text="Porcentaje de la Bateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bateria"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_row="5"
            android:layout_column="1"
            android:textSize="15.5sp" />

        <TextView
            android:text="Porcentaje de humedad interna de la caja"
            android:layout_width="261dp"
            android:layout_height="42dp"
            android:id="@+id/humedad"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="15.5sp" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="38dp"
            android:src="@mipmap/bluedot"
            android:id="@+id/imageView11"
            android:layout_row="8"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="38dp"
            android:src="@mipmap/reddot"
            android:id="@+id/imageView12"
            android:layout_row="9"
            android:layout_column="0"/>

        <TextView
            android:text="Punto seguro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/puntoSeguro"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_row="8"
            android:layout_column="1"
            android:textSize="15.5sp" />

        <TextView
            android:text="Caja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/caja"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="normal|bold"
            android:layout_row="9"
            android:layout_column="1"
            android:textSize="15.5sp" />

        <TextView
            android:text="Estado de la tapa (Abierta/Cerrada)"
            android:layout_width="299dp"
            android:layout_height="41dp"
            android:id="@+id/tapa"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="15.5sp" />
    </GridLayout>


    <ListView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/MenuList"
        android:choiceMode="singleChoice"
        android:background="#a6a6a2"
        android:layout_below="@+id/menuBtn"
        android:layout_alignParentStart="true" />


</RelativeLayout>
